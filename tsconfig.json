{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["src/*", "node_modules/*", "public/*"],
    },
    "typeRoots" : ["./src/typings", "./node_modules/@types"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.test.ts",
    "src/**/*.tsx",
    "src/**/*.test.tsx",
    "configs/**/*.ts"
  ],
}